---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Acerca de";

const identity = {
  firstname: "Javier",
  country: "Argentina",
  occupation: "Desarrollador",
  hobbies: ["programar", "jugar", "leer"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Node.js", "Astro"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
  <p>Aquí hay algunos datos sobre mí:</p>
  <ul>
    <li>Mi nombre es {identity.firstname}.</li>
    <li>
      Vivo en {identity.country} y trabajo como {identity.occupation}.
    </li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          Dos de mis pasatiempos son: {identity.hobbies[0]} y{" "}
          {identity.hobbies[1]}
        </li>
      )
    }
  </ul>
  <p>Mis habilidades son:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  {happy && <p>¡Estoy feliz de estar aprendiendo Astro!</p>}

  {finished && <p>¡He terminado este tutorial!</p>}

  {
    goal === 3 ? (
      <p>Mi objetivo es terminar en 3 días.</p>
    ) : (
      <p>Mi objetivo no es de 3 días.</p>
    )
  }

  <style define:vars={{ skillColor, fontWeight, textCase }}>
    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
      text-transform: var(--textCase);
    }
  </style>
</BaseLayout>
